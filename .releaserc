{
  "tagFormat": "${version}",
  "branches": [
    "master",
    "next"
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES",
            "BREAKING"
          ]
        },
        "releaseRules": [
          {
            "breaking": true,
            "release": "major"
          },
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "style",
            "release": "patch"
          },
          {
            "type": "refactor",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          },
          {
            "type": "chore",
            "release": false
          },
          {
            "type": "revert",
            "release": "patch"
          },
          {
            "type": "test",
            "release": "patch"
          },
          {
            "type": "build",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "‚ú® Features"
            },
            {
              "type": "fix",
              "section": "üêõ Bug Fixes"
            },
            {
              "type": "chore",
              "hidden": false,
              "section": "üöö Miscellaneous Chores"
            },
            {
              "type": "docs",
              "hidden": false,
              "section": "üìù Documentation"
            },
            {
              "type": "style",
              "hidden": false,
              "section": "üíÑ Styling"
            },
            {
              "type": "refactor",
              "hidden": false,
              "section": "‚ôªÔ∏è Code Refactoring"
            },
            {
              "type": "perf",
              "hidden": false,
              "section": "‚ö°Ô∏è Performance Improvements"
            },
            {
              "type": "test",
              "hidden": false,
              "section": "‚úÖ Testing"
            },
            {
              "type": "build",
              "hidden": false,
              "section": "üèóÔ∏è Maintenance"
            },
            {
              "type": "ci",
              "hidden": false,
              "section": "üë∑ Continuous Integration"
            }
          ]
        }
      }
    ],
    "@semantic-release/npm",
    "@semantic-release/github"
  ]
}
